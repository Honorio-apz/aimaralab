---
import BaseLayout from '../../layouts/BaseLayout.astro'; // Cambia la ruta si es necesario
import { blogs } from '../../data/blogs.js';

---

<section class="bg-gray-50 w-full py-16 px-4">
  <div class="max-w-3xl mx-auto flex flex-col items-center text-center">
    <h1 class="text-3xl font-light mb-2 tracking-tight text-gray-800 font-roboto">
      AiMara Lab Gallery
    </h1>
    <!-- Subrayado removido -->
    <h2 class="text-xl font-light text-gray-500 mb-6 font-roboto">
      Memories, Activities & Achievements
    </h2>
    <p class="text-base text-gray-600 font-normal leading-relaxed max-w-2xl">
      Explore a selection of our most memorable moments, research activities, workshops, and team experiences. The AiMara Lab Gallery highlights our commitment to collaboration, learning, and innovation in artificial intelligence and technology.
    </p>
  </div>
</section>



<section class="max-w-5xl mx-auto px-4 py-10">
   
    <div class="grid gap-8 md:grid-cols-2">
      {blogs.map(blog => (
        <article class="border rounded-xl overflow-hidden shadow hover:shadow-lg transition">
          <img src={blog.image} alt={blog.title} class="w-full h-60 object-cover" />
          <div class="p-4">
            <h2 class="text-xl font-semibold">{blog.title}</h2>
            <p class="text-gray-500 text-sm mb-2">{blog.date}</p>
            <a href={blog.url} class="text-celeste_aimara font-medium hover:underline">
              Read more...
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

