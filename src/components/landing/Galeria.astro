---
import { GALLERY_IMAGES } from '../../data/galleryImages.js'; // Cambia la ruta si es necesario
---

<section class="bg-gray-50 w-full py-16 px-4">
  <div class="max-w-3xl mx-auto flex flex-col items-center text-center">
    <h1 class="text-3xl font-light mb-2 tracking-tight text-gray-800 font-roboto">
      AiMara Lab Gallery
    </h1>
    <!-- Subrayado removido -->
    <h2 class="text-xl font-light text-gray-500 mb-6 font-roboto">
      Memories, Activities & Achievements
    </h2>
    <p class="text-base text-gray-600 font-normal leading-relaxed max-w-2xl">
      Explore a selection of our most memorable moments, research activities, workshops, and team experiences. The AiMara Lab Gallery highlights our commitment to collaboration, learning, and innovation in artificial intelligence and technology.
    </p>
  </div>
</section>

<section class="max-w-7xl mx-auto px-4 py-8">
  
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {GALLERY_IMAGES.map((img, i) => (
      <div>
        <div class="image-item cursor-pointer" data-src={img.href}>
          <img
            src={img.src}
            alt={`Foto ${i + 1}`}
            class="object-cover object-center h-40 w-full rounded-lg md:h-60 hover:-translate-y-2 transition-transform duration-300 ease-in-out"
          />
        </div>
      </div>
    ))}
  </div>
</section>

<!-- Modal para visualización de imágenes -->
<div 
  id="imageModal" 
  class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-80 hidden overflow-hidden p-2 sm:p-4"
>
  <div class="relative flex items-center justify-center">
    <button 
      id="closeModal" 
      class="absolute -top-8 sm:-top-10 right-0 text-white bg-gray-700/50 hover:bg-gray-700/70 rounded-full w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center z-60 text-sm sm:text-base"
    >
      ✕
    </button>
    <img 
      id="modalImage" 
      src="" 
      alt="Imagen a tamaño completo" 
      class="max-w-[95%] max-h-[95vh] object-contain transition-all duration-300 ease-in-out"
    />
  </div>
</div>

