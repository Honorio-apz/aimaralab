<section id="proyectos" class="bg-white-to-b from-white to-gray-50 w-full min-h-screen py-12">
  <div class="mx-auto w-full max-w-7xl px-4">
    
    {PROJECTS.map((project, idx) => (
      <div 
        class={`group flex flex-col md:flex-row items-center justify-center gap-8 mb-16 transition-transform duration-300 
        ${idx % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
      >
        {/* Imagen */}
        <div class="flex-shrink-0 w-full md:w-[320px] h-[240px] bg-white rounded-3xl border border-gray-200 overflow-hidden flex items-center justify-center transition hover:shadow-lg">
          <img 
            src={project.image} 
            alt={project.title} 
            class="object-contain w-[80%] h-[80%]" 
          />
        </div>

        {/* Contenido */}
        <div class="flex-1 max-w-2xl text-center md:text-left">
          <h1 class="text-2xl font-semibold text-gray-800 font-roboto mb-2">
            {project.title}
          </h1>
          <div class="w-16 h-[3px] bg-celeste_aimara rounded-full mb-4 mx-auto md:mx-0"></div>
          <p class="text-gray-600 mb-6 leading-relaxed">
            {project.description}
          </p>
          {project.link && (
            <a 
              href={project.link} 
              target="_blank" 
              class="inline-block bg-black text-white px-6 py-2 rounded-full text-sm font-medium shadow hover:bg-celeste_aimara hover:text-black transition-colors duration-300"
            >
              {project.app}
            </a>
          )}
        </div>
      </div>
    ))}

  </div>
</section>

