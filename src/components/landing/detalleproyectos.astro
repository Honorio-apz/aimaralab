---
import { PROJECTS } from '../../data/projects.js'; // ajusta la ruta según la ubicación
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&family=Roboto:wght@100&display=swap" rel="stylesheet">
</head>
<section class="bg-gray-50 w-full py-16 px-4">
  <div class="max-w-3xl mx-auto flex flex-col items-center text-center">
    <h1 class="text-3xl font-light mb-2 tracking-tight text-gray-800 font-roboto">
      AiMara Lab Projects
    </h1>
    <h2 class="text-xl font-light text-gray-500 mb-6 font-roboto">
      Research, Solutions & Social Impact
    </h2>
    <p class="text-base text-gray-600 font-normal leading-relaxed max-w-2xl">
      Discover our ongoing and completed projects focused on artificial intelligence, natural language processing, and technology for social good. At AiMara Lab, we design and develop innovative solutions that address real-world challenges and drive positive change in our community.
    </p>
  </div>
</section>




<section id="proyectos" class="g-gradient-to-b w-full min-h-screen">
  <div class="mx-auto w-full max-w-7xl px-4 py-8">
    
    
    {PROJECTS.map((project, idx) => (
      <div class={`flex flex-col md:flex-row items-center justify-center gap-8 
        ${idx % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
        
        <div class="flex-shrink-0 w-[340px] h-[340px] bg-white rounded-2xl border border-gray-200 flex items-center justify-center">
          <img src={project.image} alt={project.title} class="object-contain w-4/5 h-4/5" />
        </div>
    
        <div class="flex-1 max-w-xl">
          <h3 class="text-2xl font-semibold text-gray-900 mb-4">{project.title}</h3>
          <p class="text-gray-600 mb-6">{project.description}</p>
          {project.link && (
            <a href={project.link} target="_blank" class="inline-block bg-black text-white px-5 py-2 rounded-full text-sm font-medium shadow transition hover:bg-celeste_aimara hover:text-black">
              {project.app}
            </a>
          )}
        </div>
      </div>
    ))}
    
  </div>
</section>
