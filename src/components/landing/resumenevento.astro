---
const { event } = Astro.props;
---

<article class="bg-white border border-black/15 rounded-xl p-6 flex flex-col h-full transition hover:shadow-lg">

  <!-- Título -->
  <h1 class="text-2xl font-bold mb-2 tracking-tight text-gray-800 font-roboto">
    {event.title}
  </h1> 

  <div class="w-16 h-[2.5px] bg-celeste_aimara rounded my-3"></div>

    <!-- Descripción -->
    
    <p class="text-gray-600 mb-4 font-normal text-base line-clamp-2">
      {event.description}
    </p>

    <div class="flex justify-between items-center text-sm mb-0 flex-wrap gap-3">

    <!-- Metadatos alineados a la izquierda -->
    <div class="flex flex-wrap gap-4 items-center">
      <span class="flex items-center gap-1 text-celeste_aimara font-semibold">
        <svg class="w-4 h-4 text-celeste_aimara" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <rect x="3" y="4" width="18" height="18" rx="2"/>
          <path d="M16 2v4M8 2v4M3 10h18"/>
        </svg>
        {event.date}
      </span>

      <span class="flex items-center gap-1 text-gray-700 font-medium">
        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10"/>
          <path d="M12 6v6l4 2"/>
        </svg>
        {event.time}
      </span>

      <span class="flex items-center gap-1 text-gray-400">
        <svg class="w-4 h-4 text-celeste_aimara" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M12 21c-4.418 0-8-6.418-8-10A8 8 0 0 1 20 11c0 3.582-3.582 10-8 10z"/>
          <circle cx="12" cy="11" r="3"/>
        </svg>
        {event.location}
      </span>
    </div>

    <!-- Botón alineado a la derecha -->
    <a href={event.registration.url}
      class="flex items-center gap-2 px-4 py-1 rounded-lg text-sm font-medium border border-black text-black bg-white transition hover:bg-black hover:text-white hover:border-black">
      <span>See more</span>
    </a>

  </div>


</article>
