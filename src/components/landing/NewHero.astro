---
import Button from "../ui/Button.astro";

const partners = [
    { name: "CENIA", logo: "/logo/logo_cenia.png", url: "https://cenia.cl/" },
    {
        name: "Artificio",
        logo: "https://cdn.prod.website-files.com/64b9750384f5ae077a2c33fc/64f981ae0068f4ab01cde215_logo.png",
        url: "https://artificio.org/",
    },
    {
        name: "Latam-GPT",
        logo: "/logo/latam_gpt.png",
        url: "https://www.latamgpt.org/en",
    },
];
---

<div
    class="relative isolate overflow-hidden bg-white dark:bg-black min-h-svh flex flex-col justify-center transition-colors duration-300 grid-bg"
>
    <!-- Minimalist Background -->
    <div
        class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-50/50 via-white to-white dark:from-space-900/50 dark:via-black dark:to-black"
    >
    </div>

    <!-- Subtle Gradient Glow (New Idea) -->
    <div
        class="absolute top-[-10%] left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-aimara-teal/10 dark:bg-aimara-teal/10 blur-[100px] rounded-full -z-10 pointer-events-none"
    >
    </div>

    <div
        class="mx-auto max-w-7xl px-6 lg:px-8 py-24 sm:py-32 text-center relative z-10"
    >
        <div class="hidden sm:mb-10 sm:flex sm:justify-center">
            <div
                class="relative rounded-full px-4 py-1.5 text-sm leading-6 text-gray-600 dark:text-gray-400 bg-white/50 dark:bg-black/50 backdrop-blur-sm transition-all duration-300 group"
            >
                <!-- Gradient Border -->
                <div
                    class="absolute inset-0 rounded-full p-[1px] bg-gradient-to-r from-aimara-teal via-blue-500 to-purple-500 -z-10 opacity-70 group-hover:opacity-100 transition-opacity"
                >
                </div>
                <div
                    class="absolute inset-[1px] rounded-full bg-white dark:bg-black -z-10"
                >
                </div>

                Advancing AI in Latin America <a
                    href="/about"
                    class="font-semibold text-aimara-teal hover:text-aimara-teal/80 ml-1"
                    ><span class="absolute inset-0" aria-hidden="true"
                    ></span>Read more <span aria-hidden="true">&rarr;</span></a
                >
            </div>
        </div>

        <h1
            class="text-5xl sm:text-7xl lg:text-8xl font-display font-bold tracking-tighter text-gray-900 dark:text-white mb-10 animate-fade-in"
        >
            We Build the Future of <br />
            <span class="text-gradient">Artificial Intelligence. </span>
        </h1>

        <p
            class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10 font-light"
        >
            AiMara Lab is a non-profit organization dedicated to ethical,
            socially impactful, and scientifically grounded AI solutions.
        </p>

        <div class="flex items-center justify-center gap-x-6">
            <Button href="/proyectos" variant="primary">Explore Research</Button
            >
            <Button href="/contact" variant="secondary">Join Us</Button>
        </div>

        <!-- Partners/Social Proof -->
        <div class="mt-32 border-t border-gray-100 dark:border-white/5 pt-10">
            <p
                class="text-sm font-semibold text-gray-400 mb-8 tracking-[0.2em] uppercase"
            >
                TRUSTED BY INNOVATORS
            </p>
            <div
                class="flex flex-wrap justify-center gap-16 items-center grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-500"
            >
                {
                    partners.map((p) => (
                        <a
                            href={p.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="transition-transform hover:scale-105"
                        >
                            <img
                                src={p.logo}
                                alt={p.name}
                                class="h-8 sm:h-10 object-contain dark:brightness-0 dark:invert"
                            />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</div>
