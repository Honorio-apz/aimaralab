---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { PROJECTS } from "../../data/projects.js";
const project = PROJECTS[0]; 
---
<BaseLayout title={project.large_title}>
  
  <main class="min-h-screen bg-white">

    <section class="max-w-5xl mx-auto px-4 py-16">
      <div class="mb-6 text-center">
        <h1 class="text-3xl font-bold text-gray-800">{project.large_title}</h1>
        <p class="text-gray-500 text-sm">{project.date}</p>
        <div class="w-16 h-1 bg-celeste_aimara rounded mt-2 mx-auto"></div>
      </div>

      <div class="mb-8 flex justify-center">
      <img
        src={project.image}
        alt={project.large_title}
        class="w-full h-72 object-cover rounded-xl shadow-lg border"
        />
      </div>
      
      {project.project_links && project.project_links.length > 0 && (
        <div class="flex flex-col md:flex-row gap-4 justify-center mb-12">
          {project.project_links.map(link => (
            <a 
              href={link.url}
              target="_blank"
              class="blog-button"  
            >
              <span>{link.text}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
                <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
              </svg>
            </a>
          ))}
        </div>
      )}
      <div class="text-base text-gray-700 leading-relaxed mb-12 [&_strong]:text-lg">
        <p set:html={project.texto_blog}></p>
      </div>

      {project.project_links && project.project_links.length > 0 && (
        <div class="flex flex-col md:flex-row gap-4 justify-center mb-12">
          {project.project_links.map(link => (
            <a 
              href={link.url}
              target="_blank"
              class="blog-button"  
            >
              <span>{link.text}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
                <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
              </svg>
            </a>
          ))}
        </div>
      )}

      </section>
  </main>
</BaseLayout>

<style>
  /* Pega el CSS de la Opción 1 aquí si aún no lo tienes en un archivo global */
  .blog-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 12px 24px;
    background-image: linear-gradient(to right, #00c2cb, #0056b3);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.2);
    border: none;
    cursor: pointer;
    justify-content: center; /* Centra el contenido */
  }

  .blog-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 123, 255, 0.3);
  }
  
</style>