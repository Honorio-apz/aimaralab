---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { BLOGS } from "../../data/blogs.js";
const blog = BLOGS[4]; // Cambia el índice según el blog correspondiente
---
<BaseLayout title={blog.title}>
  <main class="min-h-screen bg-white">
    <section class="max-w-5xl mx-auto px-4 py-16">
      
      <div class="mb-6 text-center">
        <h1 class="text-3xl font-bold text-gray-800">{blog.title}</h1>
        <p class="text-gray-500 text-sm">{blog.date}</p>
        <div class="w-16 h-1 bg-celeste_aimara rounded mt-2 mx-auto"></div>
      </div>

      <div class="mb-8 flex justify-center">
        <img 
          src={blog.image_titular} 
          alt={blog.title} 
          class="w-full h-72 object-cover rounded-xl shadow-lg border"
        />
      </div>

      <div class="text-base text-gray-700 leading-relaxed mb-12">
        <p style="white-space: pre-line;">{blog.texto_blog}</p>
        
      </div>

      {blog.imagenes_cuerpo.length > 0 && (
        <div class="grid gap-4 md:grid-cols-2">
          {blog.imagenes_cuerpo.map(img => (
            <img src={img} alt="Blog image" class="rounded-lg shadow border" />
          ))}
        </div>
      )}

    </section>
  </main>
</BaseLayout>
