<section class="w-full min-h-screen bg-gray-0 py-16">
  <div class="mx-auto max-w-7xl px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {BLOGS.map((blog) => (
        <a 
          href={blog.enlace_blog.url} 
          class="block bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 group"
        >
          {/* Imagen */}
          <div class="relative w-full h-48 overflow-hidden rounded-t-xl">
            <img 
              src={blog.image_titular} 
              alt={blog.title} 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-0 transition-all duration-300"></div>
          </div>

          {/* Contenido */}
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 font-roboto mb-2">
              {blog.title}
            </h3>
            <p class="text-sm text-gray-600 mb-4">{blog.date}</p>
            <p class="text-sm text-gray-600 mb-4 leading-relaxed line-clamp-3">
              {blog.texto_blog}
            </p>
            <span class="inline-flex items-center text-sm font-medium text-celeste_aimara group-hover:text-blue-600 transition-colors">
              {blog.enlace_blog.label}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>


</BaseLayout>
